package com.yourcompany.microservice.dto;

import com.fasterxml.jackson.annotation.JsonProperty;
import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Data;
import lombok.NoArgsConstructor;

import javax.validation.constraints.NotBlank;
import javax.validation.constraints.NotNull;

/**
 * DTO for receiving IDH Table Data Search requests from other microservices
 * This is a simplified version containing only the fields needed by this microservice
 */
@Data                    // Lombok: Generates getters, setters, toString, equals, hashCode
@NoArgsConstructor       // Lombok: Generates no-argument constructor
@AllArgsConstructor      // Lombok: Generates constructor with all fields
@Builder                 // Lombok: Generates builder pattern for easy object creation
public class IDHTableDataSearchDTO {

    /**
     * Identifies which client is making the request
     * Maps to "clientIdentifier" from the source
     */
    @NotBlank(message = "Client identifier cannot be blank")
    @JsonProperty("clientIdentifier")
    private String clientIdentifier;

    /**
     * The document type or key being searched
     * Maps to "key" from the JSON payload
     */
    @NotBlank(message = "Key cannot be blank")
    @JsonProperty("key")
    private String key;

    /**
     * Indicates if this field is mandatory
     * Maps to "addiKey" from the JSON payload
     */
    @JsonProperty("addiKey")
    private String addiKey;

    /**
     * The virtual table name for the search
     * Maps to "virtualTableName" from the source
     */
    @NotBlank(message = "Virtual table name cannot be blank")
    @JsonProperty("virtualTableName")
    private String virtualTableName;

    /**
     * Target identifier (e.g., "IDH")
     * Maps to "target" from the JSON payload
     */
    @JsonProperty("target")
    private String target;

    /**
     * Column name for filtering
     * Maps to "colName" from the JSON payload
     */
    @JsonProperty("colName")
    private String columnName;

    /**
     * Column value for filtering
     * Maps to "colval" from the JSON payload
     */
    @JsonProperty("colval")
    private String columnValue;

    /**
     * Operation to perform (e.g., "IN", "EQUALS")
     * Maps to "operator" from the JSON payload
     */
    @JsonProperty("operator")
    private String operator;

    // If you need nested objects like postQueryFilters, add them here:
    // private List<QueryFilter> postQueryFilters;
}